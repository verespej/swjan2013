<script>
var canPlay = true;
var audio = new Audio();
audio.src = "/assets/song1cut.mp3";

function syncPlay() {
  if (canPlay) {
    $("#rock_btn").addClass("disabled").text("Loading...");
    audio.load();
    $("#rock_btn").text("Waiting for conductor...");
    $("#rock_btn").text("Get up and dance sucker!");
    audio.play();
  }
}
</script>
<div class="backgrounder">
  <div class="container">
    <div class="span2 offset1 visible-desktop" style="margin-left:85px;">
      <%= image_tag("logo.png", :class=>"visible-desktop") %>
    </div>
    <div class="span2 hidden-desktop" style="margin-left:-20px;">
      <%= image_tag("logo.png", :class=>"hidden-desktop") %>
    </div>
    <div class="row-fluid">
      <h6>proudly presents:</h6>
      <div class="span10 offset1"><h1>Surround Sound</h1></div>
      <div class="row-fluid">
        <div class="span6 offset1">
          <div class="row-fluid">
            <div class="span6">
              <div style="height:40px"></div>
              <h5>Get ready for a social symphony. Click the "Rock!" button below to join in. After clicking, the app will load and wait for the syncronization signal. Get ready to Rock!</h5>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span7">
              <a id="rock_btn" class="btn btn-primary btn-block" href="#" role="button" data-toggle="modal" onclick="syncPlay();">
                <b>Rock!<b>
              </a>
            </div>
          </div>
          <div style="height:40px"></div>
        </div>
      </div>
    </div>
  </div>
</div>

